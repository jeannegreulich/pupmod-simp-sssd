<%   if ['RedHat','CentOS','OracleLinux'].include?(@facts['operatingsystem']) && (@facts['operatingsystemmajrelease'].to_s <= "7") -%>
# 'local' provider was removed from sssd v2 but can be used if special
# options are used to compile it.  If the local provider is not working
# and you are using sssd v2 or later please refer to the release notes
# for sssd v2.0.
<% end -%>
<% if @debug_level -%>
debug_level = <%= @debug_level %>
<% end -%>
debug_timestamps = <%= @debug_timestamps.to_s %>
debug_microseconds = <%= @debug_microseconds.to_s %>
<% if @default_shell -%>
default_shell = <%= @default_shell %>
<% end -%>
<% if @base_directory -%>
base_directory = <%= @base_directory %>
<% end -%>
create_homedir = <%= @create_homedir.to_s %>
remove_homedir = <%= @remove_homedir.to_s %>
<% if @homedir_umask -%>
homedir_umask = <%= @homedir_umask %>
<% end -%>
<% if @skel_dir -%>
skel_dir = <%= @skel_dir %>
<% end -%>
<% if @mail_dir -%>
mail_dir = <%= @mail_dir %>
<% end -%>
<% if @userdel_cmd -%>
userdel_cmd = <%= @userdel_cmd %>
<% end -%>
